<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mes_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/message_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/message_text_background_me"
            android:gravity="start"

            android:maxWidth="310dp"
            android:minWidth="67dp"

            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"

            android:text="09/06 16:07"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/message_text_layout"
            app:layout_constraintTop_toBottomOf="@+id/message_text_layout" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
